{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./out-tsc/vitest",
        "types": [
            "vitest/globals",
            "vitest/importMeta",
            "vite/client",
            "node",
            "vitest"
        ],
        "esModuleInterop": true,
        "plugins": [
            {
                "name": "gql.tada/ts-plugin",
                "schemas": [
                    {
                        "name": "shop-api",
                        "schema": "http://localhost:3000/shop-api"
                    },
                    {
                        "name": "admin-api",
                        "schema": "http://localhost:3000/admin-api"
                    }
                ]
            }
        ]
    },
    "references": [
        {
            "path": "./tsconfig.lib.json"
        }
    ],
    "include": [
        "vite.config.ts",
        "vite.config.mts",
        "vitest.config.ts",
        "vitest.config.mts",
        "src/**/*.test.ts",
        "src/**/*.spec.ts",
        "src/**/*.test.tsx",
        "src/**/*.spec.tsx",
        "src/**/*.test.js",
        "src/**/*.spec.js",
        "src/**/*.test.jsx",
        "src/**/*.spec.jsx",
        "src/**/*.d.ts",
        "e2e/**/*.spec.ts"
    ]
}
